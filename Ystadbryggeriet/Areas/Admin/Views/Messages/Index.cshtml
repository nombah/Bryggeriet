@model IEnumerable<Ystadbryggeriet.Models.Message>

@{
    ViewBag.Title = "Index";
}
<div class="content">
    <div class="page-h1">
    </div>
    <div class="tbl">
        <div class="col-md-12">
            <div class="wdgt" hide-btn="true">
                <div class="wdgt-header"> Meddelanden</div>
                <div class="wdgt-body" style="padding-bottom:0px; padding-top:10px;">
                    <table cellpadding="0" cellspacing="0" border="0" class="datatable table table-striped table-bordered">
                        <thead>                            
                            <tr>
                                <th>Avsändare</th>
                                <th>Meddelande</th>
                                <th>tid</th>
                                <th>Läst</th>
                                <th>Detaljer</th>
                                <th>Radera</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model) {
                            <tr class="gradeX">
                                <td>@Html.DisplayFor(modelItem => item.SenderUser.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Text)</td>
                                <td>@Html.DisplayFor(modelItem => item.TimeStamp)</td>
                                <td>@Html.DisplayFor(modelItem => item.Read)</td>
                                <td class="center">@Html.ActionLink("Visa", "Details", new { id = item.MessageID })</td>
                                <td class="center">@Html.ActionLink("Radera", "Delete", new { id = item.MessageID })</td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
